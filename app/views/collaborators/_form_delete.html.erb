<%= form_for [wiki, wiki.collaborators.last], html: {method: :delete} do |f| %>
	<div class="form-group">
		<%= label_tag :email, "Remove Collaborator:" %>
		<%= email_field_tag :email, "", class: "form-control", placeholder: "Enter collaborator's email" %>
	</div>
	<div class="form-group">
		<!-- <%= f.submit "Remove Collaborator", class: "btn btn-danger", data: {confirm: "Are you sure you want to remove this user as a collaborator?"} %> -->
		<%= link_to "Remove Collaborator", [wiki, wiki.collaborators.last], method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to remove this user as a collaborator?"} %>
	</div>
<% end %>

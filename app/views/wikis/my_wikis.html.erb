<h1 class="text-center">My Wikis</h1>
<br />
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table">
			<div class="media">
				<div class="media-body">
					<% @user.wikis.each do |wiki| %>
						<tr>
							<td><h4 class="media-heading"><%= link_to wiki.title, wiki %><small> - Updated <%= time_ago_in_words(wiki.updated_at) %> ago.</small></h4></td>
							<td width="3rem"><%= link_to "Edit", edit_wiki_path(wiki), class: "btn btn-success" %></td>
							<td width="3rem"><%= link_to "Delete", wiki, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this wiki?"} %></td>
						</tr>
					<% end %>
				</div>
			</div>
		</table>
	</div>
</div>
<div class="text-center">
	<%= link_to "New Wiki", new_wiki_path, class: "btn btn-primary btn-lg" %>
</div>

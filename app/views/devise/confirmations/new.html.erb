<h2 class="text-center">Resend confirmation instructions</h2>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field form-group">
		    <%= f.label :email, class: "sr-only" %><br />
		    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
		  </div>

			<div class="text-center">
				<div class="actions form-group">
					<%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %>
				</div>
				<%= render "devise/shared/links" %>
			</div>
		<% end %>

	</div>
</div>
